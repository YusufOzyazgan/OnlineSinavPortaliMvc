@{
    ViewData["Title"] = "CreateQuestion";
}

@model QuestionModel
<style>
    body {
        background-color: lightgray;
    }
</style>
<body>
    <div class="container-fluid mt-7 ml-5 ">

        <div class="row justify-content-center">

            <div class="col-md-8">

                <div class="container mt-10">

                    <div class="row">

                        <div class="">

                            <form method="post" asp-action="CreateQuestion" class="mt-5">

                                <h2 class=" mb-4">Yeni Soru Ekle</h2>
                                <hr />
                                <input type="hidden" asp-for="ExamID" value="@ViewBag.ExamId">
                                <div class="form-group">
                                    <label for="newQuestionText">Soru Metni:</label>
                                    <textarea asp-for="QuestionText" class="form-control" id="newQuestionText" rows="5"></textarea>
                                    <span asp-validation-for="QuestionText" class="text-danger"></span>
                                    <br />
                                </div>

                                <div class="form-group">
                                    <label>Soru Seçenekleri:</label>
                                    <div>
                                        <div class="form-check">
                                            <input type="radio" id="optionA" checked name="QuestionAnswersText" value="A" class="form-check-input">
                                            <label for="optionA" class="form-check-label">A)</label>
                                            <input type="text" asp-for="optionAText" class="form-control">
                                        </div>

                                        <div class="form-check">
                                            <input type="radio" id="optionB" name="QuestionAnswersText" value="B" class="form-check-input">
                                            <label for="optionB" class="form-check-label">B)</label>
                                            <input type="text" asp-for="optionBText" class="form-control">
                                        </div>

                                        <div class="form-check">
                                            <input type="radio" id="optionC" name="QuestionAnswersText" value="C" class="form-check-input">
                                            <label for="optionC" class="form-check-label">C)</label>
                                            <input type="text" asp-for="optionCText" class="form-control">
                                        </div>

                                        <div class="form-check">
                                            <input type="radio" id="optionD" name="QuestionAnswersText" value="D" class="form-check-input">
                                            <label for="optionD" class="form-check-label">D)</label>
                                            <input type="text" asp-for="optionDText" class="form-control">
                                        </div>
                                        <br />
                                    </div>
                                    <span asp-validation-for="QuestionAnswersText" class="text-danger"></span>

                                </div>

                                <button class="btn btn-primary" type="submit">Kaydet</button>

                                <div class="alert mt-3" id="sonuc"></div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
