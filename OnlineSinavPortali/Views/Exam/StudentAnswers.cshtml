@{
    ViewData["Title"] = "StudentAnswers";
}
@model List<StudentQuestionsModel>


<div class="container mt-3">

    @{
        if ( Model.Count != 0)
        {


            @foreach (var item in Model)
            {
                <div class="container">
                    <div class="card mt-4">
                        <div class="card-header">
                            <h6>Doğru Cevap :  @item.QuestionAnswer</h6>
                            <h6>Öğrencinin Cevabı:  @item.AnswerText</h6>
                            <hr>
                            <h3>@(Model.IndexOf(item) + 1). @item.QuestionText</h3>
                        </div>
                        <div class="card-body">
                            <ul class="list-group my-1">
                                <li class="list-group-item bg-light border my-2 rounded-4">
                                    <label>
                                        @item.optionAText
                                    </label>
                                </li>

                                <li class="list-group-item border bg-light my-2 rounded-4">
                                    <label>
                                        @item.optionBText
                                    </label>
                                </li>

                                <li class="list-group-item border bg-light my-2 rounded-4">
                                    <label>
                                        @item.optionCText
                                    </label>
                                </li>

                                <li class="list-group-item border bg-light my-2 bg-light rounded-4">
                                    <label>
                                        @item.optionDText
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <h3 class="text-center text-danger">Kayıtlı Soru Yok</h3>
        }
    }








</div>





