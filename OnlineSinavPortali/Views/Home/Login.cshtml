@{
    ViewData["Title"] = "Login";
}
@model OnlineSinavPortali.ViewModels.LoginModel
<body style="background-color: #333;">

    <div class="row mt-5">
        <div class="col-md-4 offset-4 mt-5" >
            <form asp-action="Login" method="post">
                <div class="card">
                    <div class="card-header"><h3>Oturum Aç</h3></div>
                    <div class="card-body">

                        <div class="mb-3">
                            <label asp-for="Username"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" class="form-control" value="Abc.123" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RememberMe"></label>
                            <input asp-for="RememberMe" class="form-check" />

                        </div>
                        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                    </div>
                    <div class="card-footer">

                        <input type="submit" value="Giriş" class="btn btn-primary" />
                        <a asp-action="Register" class="btn btn-link">Kayıt Ol</a>

                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
