@{
    ViewData["Title"] = "UserPage";
}

@model OnlineSinavPortali.ViewModels.UserModel

<h2 class="mt-3">@Model.FullName</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="~/Photos/@Model.PhotoUrl" style="width:200px" />
        <form class="col-md-6" method="post" asp-action="UserPage" enctype="multipart/form-data">
            <label>Resim Ekle</label>
            <input asp-for="PhotoFile" class="form-control" />
            <span asp-validation-for="PhotoFile" class="text-danger"></span>
            <br />
            <button class="btn btn-primary" type="submit" asp-controller="Home" asp-action="UserPage">Ekle</button>
        </form>
    </div>
    <div class="col-md-7 mt-5">
        @if (Model.Role == "Student")
        {
            <span class="badge bg-info">Öğrenci Üye</span>
        }
        @if (Model.Role == "Teacher")
        {
            <span class="badge bg-info">Öğretmen Üye</span>
        }
        @if (Model.Role == "Admin")
        {
            <span class="badge bg-info">Admin Üye</span>
        }
        <table class="table">
            <tr>
                <td><b>Adı Soyadı</b></td>
                <td>@Model.FullName</td>
            </tr>
            @if (Model.Role == "Student")
            {
                <tr>
                    <td><b>Bölümü</b></td>
                    <td>@Model.UniversityDepartment</td>
                </tr>
                <tr>
                    <td><b>Öğrenci Numarası</b></td>
                    <td>@Model.StudentNumber</td>
                </tr>
            }
            <tr>
                <td><b>E-Posta</b></td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td><b>İlk Giriş Tarihi</b></td>
                <td>@Model.CreatedAt</td>
            </tr>
        </table>
    </div>
