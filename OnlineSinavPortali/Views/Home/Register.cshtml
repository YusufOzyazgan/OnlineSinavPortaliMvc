@{
    ViewData["Title"] = "Register";
}
@model OnlineSinavPortali.ViewModels.StudentRegisterModel


<body style="background-color: #333; bottom: 0%;">
    <div class="mt-5">
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <div class="container d-flex align-items-center justify-content-center">
            <img src="~/Photos/TossLogo.jpg" />
        </div>
        <div class="container d-flex align-items-center justify-content-center" style="height: 20vh;">

            <div class="text-center">
                <a class="text-reset text-decoration-none btn btn-primary btn-lg mx-2 " asp-area="" asp-controller="Home" asp-action="StudentRegister">
               
                        Öğrenci Kayıt
                   
                </a>
                <a class="text-reset text-decoration-none btn btn-success btn-lg mx-2" asp-area="" asp-controller="Home" asp-action="TeacherRegister">
               
                        Öğretmen Kayıt
                   
                </a>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
